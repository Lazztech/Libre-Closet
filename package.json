{
  "name": "lazztech.boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "nest build && npm run generate:tailwind && npm run generate:sw",
    "generate:sw": "esbuild --outfile=views/assets/src-sw.js --bundle views/assets/src-sw.ts && npx workbox injectManifest",
    "generate:sw:watch": "npx workbox injectManifest --watch",
    "generate:tailwind": "npx @tailwindcss/cli -i ./views/assets/main.css -o ./public/bundle.css --minify",
    "generate:tailwind:watch": "npx @tailwindcss/cli -i ./views/assets/main.css -o ./public/bundle.css --minify --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run generate:tailwind && nest start",
    "start:dev": "concurrently \"nest start --watch\" \"npm run generate:tailwind:watch\"",
    "start:debug": "concurrently \"nest start --debug --watch\" \"npm run generate:tailwind:watch\"",
    "start:prod": "node dist/main",
    "lighthouse": "lhci autorun",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:smoke": "playwright test test/smoke.spec.ts --project=chromium",
    "precommit": "npm run format && npm run lint && npm run test:cov && npm run test:e2e:smoke && npm run build && npm run lighthouse"
  },
  "dependencies": {
    "@khmyznikov/pwa-install": "^0.5.8",
    "@mikro-orm/better-sqlite": "^6.5.8",
    "@mikro-orm/core": "^6.5.8",
    "@mikro-orm/migrations": "^6.5.8",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.8",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/throttler": "^6.4.0",
    "@proventuslabs/nestjs-multipart-form": "^1.0.0-alpha.1",
    "@tailwindcss/cli": "^4.1.14",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "hbs": "^4.2.0",
    "htmx-ext-sse": "^2.2.2",
    "htmx.org": "^2.0.7",
    "hyperscript.org": "^0.9.14",
    "joi": "^18.0.1",
    "lodash": "^4.17.21",
    "nestjs-i18n": "^10.5.1",
    "nestjs-pino": "^4.4.1",
    "nestjs-s3": "^3.0.1",
    "nodemailer": "^7.0.9",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "web-push": "^3.6.7",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@lhci/cli": "^0.15.1",
    "@mikro-orm/cli": "^6.5.8",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@playwright/test": "^1.57.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/hbs": "^4.0.5",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.2",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "@types/web-push": "^3.6.4",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.27",
    "esbuild": "^0.25.11",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "npm-check-updates": "^19.1.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "workbox-cli": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-recipes": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/migrations/**/*",
      "!**/entity/**/*",
      "!**/*.dto.*",
      "!**/*.input.*",
      "!**/*.module.*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
